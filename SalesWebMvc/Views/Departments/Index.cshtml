@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-controller="Departments" asp-action="Create" class="btn btn-primary btn-xs">Create New Department</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-xs">Back To Home</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="Departments" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Edit</a> |
                    <a asp-controller="Departments" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Details</a> |
                    <a asp-controller="Departments" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>