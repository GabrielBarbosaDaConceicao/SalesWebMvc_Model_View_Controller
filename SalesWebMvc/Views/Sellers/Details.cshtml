@model Seller

@{
    ViewData["Title"] = "Details";
}

<div class="jumbotron jumbotron-fluid">
    <h2>@ViewData["Title"]</h2>

    <h4>Seller</h4>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Model.Email
        </dd>
        <dt>
            BirthDate
        </dt>
        <dd>
            @Model.BirthDate.ToString("dd/MM/yyyy")
        </dd>
        <dt>
            BaseSalary
        </dt>
        <dd>
            @Model.BaseSalary.ToString("F2")
        </dd>
        <dt>
            Department
        </dt>
        <dd>
            @Model.Department.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Sellers" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-xs">Edit</a>
    <a asp-controller="Sellers" asp-action="Index" class="btn btn-success btn-xs">Back To List</a>
</div>