@model SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron jumbotron-fluid">
    <h2>@ViewData["Title"]</h2>

    <h4>Seller</h4>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Sellers" asp-action="Edit">
            <input type="hidden" asp-for="@Model.Seller.Id" />
            <div class="form-group">
                <label asp-for="@Model.Seller.Name" class="control-label"></label>
                <input asp-for="@Model.Seller.Name" class="form-control" />
                <span asp-validation-for="@Model.Seller.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Seller.Email" class="control-label"></label>
                <input asp-for="@Model.Seller.Email" class="form-control" />
                <span asp-validation-for="@Model.Seller.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Seller.BirthDate" class="control-label"></label>
                <input asp-for="@Model.Seller.BirthDate" class="form-control" />
                <span asp-validation-for="@Model.Seller.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Seller.BaseSalary" class="control-label"></label>
                <input asp-for="@Model.Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="@Model.Seller.BaseSalary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Seller.DepartmentId" class="control-label"></label>
                <select asp-for="@Model.Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="@Model.Seller.Department.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-xs" />
                <a asp-action="Index" class="btn btn-success btn-xs">Back To List</a>
            </div>
        </form>
    </div>
</div>