@model SellerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>
    @ViewData["Title"]
</h2>

<h4>Seller</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Sellers" asp-action="Create" method="Post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Name</label>
                <input asp-for="Seller.Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Email</label>
                <input asp-for="Seller.Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">BirthDate</label>
                <input asp-for="Seller.BirthDate" class="form-control" placeholder="Enter BirthDate" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">BaseSalary</label>
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="Enter BaseSalary" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seller.Department" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-xs" />
                <a asp-controller="Sellers" asp-action="Index" class="btn btn-success btn-xs">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}