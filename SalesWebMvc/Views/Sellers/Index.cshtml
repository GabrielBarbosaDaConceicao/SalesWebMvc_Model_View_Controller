@model IEnumerable<Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<div class="form-group">
    <a asp-controller="Sellers" asp-action="Create" class="btn btn-primary btn-xs">Create New</a> |
    <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-xs">Back to Home</a>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>Nome</th>
                <th>Email</th>
                <th>BirthDate</th>
                <th>BaseSalary</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (Seller seller in Model)
            {
                <tr>
                    <td>@seller.Name</td>
                    <td>@seller.Email</td>
                    <td>@seller.BirthDate.ToString("dd/MM/yyyy")</td>
                    <td>@seller.BaseSalary.ToString("F2")</td>
                    <td>
                        <a asp-controller="Sellers" asp-action="Edit" asp-route-id="@seller.Id" class="btn btn-primary btn-xs">Edit</a> |
                        <a asp-controller="Sellers" asp-action="Details" asp-route-id="@seller.Id" class="btn btn-warning btn-xs">Details</a> |
                        <a asp-controller="Sellers" asp-action="Delete" asp-route-id="@seller.Id" class="btn btn-danger btn-xs">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>